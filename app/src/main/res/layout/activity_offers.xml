<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <!-- Thanh công cụ -->
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="40dp"
        android:text="TIN TỨC &amp; ƯU ĐÃI"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/i_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tab_news_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIN TỨC"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tab_offers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ƯU ĐÃI"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/i_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/hinhuudai1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="HSSV TẸT GA 45K SUỐT TUẦN TOÀN HỆ THÔNG \n HSSV TẸT GA 45K SUỐT TUẦN TOÀN HỆ THÔNG"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/hinhuudai2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="C'TEN - XEM PƠHIM CHỈ 45K TẠI MỐC 10H \n C'TEN - XEM PƠHIM CHỈ 45K TẠI MỐC 10H"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/hinhuudai3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="C'MONDAY - CINESSTAR HAPPY DAY \n ĐỒNG GIÁ 45K/VÉ 2D TOÀN HỆ THỐNG"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/hinhuudai4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1TR LÀ QUÁ BÈO RỒI - NGÀY HỘI THÀNH VIÊN \n 1TR LÀ QUÁ BÈO RỒI - NGÀY HỘI THÀNH VIÊN"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/hinhuudai5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="90dp"
            android:text="CINESTAR'S PURPLE DAY \n Diễn ra vào thứ 3 cuối cùng hằng tháng"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:clipToPadding="false"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/iconhomes_bottom" />

        <ImageView
            android:id="@+id/icon_film"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/iconfilm_bottom" />

        <ImageView
            android:id="@+id/icon_picture"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/iconpictures_bottom" />

        <ImageView
            android:id="@+id/icon_person"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/iconpersons_bottom" />
    </LinearLayout>

</RelativeLayout>